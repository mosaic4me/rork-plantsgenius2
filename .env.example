# PlantsGenius Environment Variables Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control

# ============================================
# API Configuration
# ============================================
EXPO_PUBLIC_API_BASE_URL=https://api.plantsgenius.site/api

# ============================================
# Plant Identification API
# ============================================
EXPO_PUBLIC_PLANTNET_API_KEY=your_plantnet_api_key_here
EXPO_PUBLIC_PLANTNET_API_URL=https://my-api.plantnet.org/v2/identify/all

# ============================================
# Supabase Configuration
# ============================================
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================
# Currency Conversion API
# ============================================
EXPO_PUBLIC_CURRENCY_API_KEY=your_freecurrencyapi_key
EXPO_PUBLIC_CURRENCY_API_URL=https://api.freecurrencyapi.com/v1/latest

# ============================================
# SMTP2GO Email API (for contact form)
# Get from: https://www.smtp2go.com/
# ============================================
SMTP2GO_API_KEY=your_smtp2go_api_key
CONTACT_EMAIL=your_contact_email@example.com
FROM_EMAIL=your_from_email@example.com

# ============================================
# Google OAuth Configuration
# Get from: https://console.cloud.google.com/
# ============================================
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_google_web_client_id
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your_google_android_client_id
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id

# ============================================
# Apple Sign In Configuration
# Get from: https://developer.apple.com/
# ============================================
EXPO_PUBLIC_APPLE_CLIENT_ID=your_apple_client_id

# ============================================
# Payment Gateway Configuration
# ============================================

# Google Pay (Android)
# Get from: https://pay.google.com/business/console
EXPO_PUBLIC_GOOGLE_PAY_MERCHANT_ID=your_google_pay_merchant_id

# Apple Pay (iOS)
# Get from: https://developer.apple.com/
EXPO_PUBLIC_APPLE_PAY_MERCHANT_ID=your_apple_pay_merchant_id

# ============================================
# Google AdMob Configuration
# Get from: https://admob.google.com/
# Use test IDs during development
# ============================================
EXPO_PUBLIC_ADMOB_ENABLED=false

# App IDs
EXPO_PUBLIC_ADMOB_APP_ID_ANDROID=ca-app-pub-xxxxx~xxxxx
EXPO_PUBLIC_ADMOB_APP_ID_IOS=ca-app-pub-xxxxx~xxxxx

# Banner Ad Unit IDs
EXPO_PUBLIC_ADMOB_BANNER_ID_ANDROID=ca-app-pub-xxxxx/xxxxx
EXPO_PUBLIC_ADMOB_BANNER_ID_IOS=ca-app-pub-xxxxx/xxxxx

# Interstitial Ad Unit IDs
EXPO_PUBLIC_ADMOB_INTERSTITIAL_ID_ANDROID=ca-app-pub-xxxxx/xxxxx
EXPO_PUBLIC_ADMOB_INTERSTITIAL_ID_IOS=ca-app-pub-xxxxx/xxxxx

# Rewarded Ad Unit IDs (for earning free scans)
EXPO_PUBLIC_ADMOB_REWARDED_ID_ANDROID=ca-app-pub-xxxxx/xxxxx
EXPO_PUBLIC_ADMOB_REWARDED_ID_IOS=ca-app-pub-xxxxx/xxxxx

# ============================================
# Feature Flags
# ============================================
EXPO_PUBLIC_ENABLE_ADS=false
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true

# ============================================
# MongoDB Configuration
# Get from: https://www.mongodb.com/cloud/atlas
# ============================================
MONGODB_URI=your_mongodb_connection_string
MONGODB_DB=plantgenius

# ============================================
# JWT Secret (Generate using: openssl rand -hex 32)
# ============================================
JWT_SECRET=your_jwt_secret_here

# ============================================
# Subscription Plans Pricing (in USD)
# Adjust these based on your pricing strategy
# ============================================
EXPO_PUBLIC_BASIC_MONTHLY_PRICE=2.99
EXPO_PUBLIC_BASIC_YEARLY_PRICE=32.28
EXPO_PUBLIC_PREMIUM_MONTHLY_PRICE=4.99
EXPO_PUBLIC_PREMIUM_YEARLY_PRICE=52.76

# ============================================
# SETUP INSTRUCTIONS
# ============================================
# 
# 1. Copy this file: cp .env.example .env
# 2. Fill in all credentials with your actual values
# 3. Never commit .env to git (it's in .gitignore)
# 4. Use test credentials during development
# 5. Switch to production credentials before app store submission
#
# For detailed setup instructions, see SETUP_INSTRUCTIONS.md
